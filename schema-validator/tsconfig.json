{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist/scripts/",
        "noImplicitAny": true,
        "target": "es5",
        "allowJs": true,
        "checkJs": false,
        "lib": [
            "DOM",
            "ES5"
        ],
        "esModuleInterop": true,
        "declaration": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/typings/*"
            ]
        },
    },
    "include": [
        "src/scripts/**/*",
        "src/typings/**/*",
        "src/tests/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}